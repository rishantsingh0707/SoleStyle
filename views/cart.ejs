<!DOCTYPE html>
<html>

<head>
  <title>My Cart - SoleStyle</title>
</head>
<style>
  /* Elegant Shopping Cart Styles */
  @import url("https://fonts.googleapis.com/css2?family=Geist+Sans:wght@300;400;500;600;700&family=Manrope:wght@300;400;500;600&display=swap");

  /* Background and Layout */
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    font-family: "Manrope", sans-serif;
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
  }

  /* Animated Background Elements */
  body::before {
    content: "";
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 20% 80%, rgba(210, 31, 77, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(245, 158, 11, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(210, 31, 77, 0.05) 0%, transparent 50%);
    animation: float 20s ease-in-out infinite;
    z-index: -1;
  }

  @keyframes float {

    0%,
    100% {
      transform: translate(0px, 0px) rotate(0deg);
    }

    33% {
      transform: translate(30px, -30px) rotate(120deg);
    }

    66% {
      transform: translate(-20px, 20px) rotate(240deg);
    }
  }

  /* Container Styling */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  /* Page Title */
  h2 {
    font-family: "Geist Sans", sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary);
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    border-radius: 2px;
  }

  /* Cart Table Container */
  .cart-container {
    background: rgba(245, 158, 11, 0.3);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 40px rgba(210, 31, 77, 0.1);
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
  }

  .cart-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(210, 31, 77, 0.3), transparent);
  }

  /* Table Styling */
  .table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: transparent;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .table thead th {
    background: linear-gradient(135deg, var(--primary), #e11d48);
    color: var(--primary-foreground);
    font-family: "Geist Sans", sans-serif;
    font-weight: 600;
    padding: 1.5rem 1rem;
    text-align: left;
    border: none;
    position: relative;
  }

  .table thead th:first-child {
    border-top-left-radius: 15px;
  }

  .table thead th:last-child {
    border-top-right-radius: 15px;
  }

  .table tbody tr {
    background: rgba(210, 31, 77, 0.05);
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(210, 31, 77, 0.1);
  }

  .table tbody tr:nth-child(even) {
    background: rgba(247, 228, 230, 0.3);
  }

  .table tbody tr:hover {
    background: rgba(84, 75, 61, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(210, 31, 77, 0.1);
  }

  .table tbody td {
    padding: 1.5rem 1rem;
    border: none;
    color: var(--foreground);
    font-weight: 500;
    vertical-align: middle;
  }

  /* Item Name Styling */
  .table tbody td:first-child {
    font-family: "Geist Sans", sans-serif;
    font-weight: 600;
    color: var(--primary);
  }

  /* Price Styling */
  .table tbody td:nth-child(2),
  .table tbody td:nth-child(4) {
    font-family: "Geist Sans", sans-serif;
    font-weight: 600;
    color: var(--secondary);
  }

  /* Form Styling */
  .quantity-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .quantity-input {
    width: 80px;
    padding: 0.5rem;
    border: 2px solid var(--border);
    border-radius: 8px;
    background: var(--input);
    color: var(--foreground);
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
  }

  .quantity-input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--ring);
  }

  /* Button Styling */
  .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-family: "Geist Sans", sans-serif;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-success {
    background: linear-gradient(135deg, var(--secondary), #f59e0b);
    color: var(--secondary-foreground);
  }

  .btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(245, 158, 11, 0.3);
  }

  .btn-danger {
    background: linear-gradient(135deg, var(--destructive), #ef4444);
    color: var(--destructive-foreground);
  }

  .btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(220, 38, 38, 0.3);
  }

  /* Total Section */
  .total-section {
    background: linear-gradient(135deg, var(--primary), #e11d48);
    color: var(--primary-foreground);
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
    margin: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .total-section::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {

    0%,
    100% {
      transform: rotate(0deg);
    }

    50% {
      transform: rotate(180deg);
    }
  }

  .total-section h4 {
    font-family: "Geist Sans", sans-serif;
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  /* Empty Cart Styling */
  .empty-cart {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .empty-cart p {
    font-size: 1.2rem;
    color: var(--muted-foreground);
    margin-bottom: 2rem;
  }

  /* Alert Styling */
  .alert {
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin: 1rem 0;
    font-weight: 500;
    border: none;
    position: relative;
    overflow: hidden;
  }

  .alert::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: currentColor;
  }

  .alert-danger {
    background: rgba(220, 38, 38, 0.1);
    color: var(--destructive);
    border-left: 4px solid var(--destructive);
  }

  .alert-success {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
    border-left: 4px solid #16a34a;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    h2 {
      font-size: 2rem;
    }

    .cart-container {
      padding: 1rem;
      border-radius: 15px;
    }

    .table {
      font-size: 0.9rem;
    }

    .table thead th,
    .table tbody td {
      padding: 1rem 0.5rem;
    }

    .quantity-form {
      flex-direction: column;
      gap: 0.25rem;
    }

    .quantity-input {
      width: 60px;
    }

    .btn {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .table {
      display: block;
      overflow-x: auto;
      white-space: nowrap;
    }

    .total-section h4 {
      font-size: 1.5rem;
    }
  }
</style>

<body>
  <%- include('navbar') %>

    <div class="container">
      <h2>Your Cart</h2>

      <% if (cart && cart.length> 0) { %>
        <div class="cart-container">
          <table class="table">
            <thead>
              <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% let total=0; %>
                <% cart.forEach(c=> {
                  const subtotal = c.item.price * c.quantity;
                  total += subtotal;
                  %>
                  <tr>
                    <td>
                      <%= c.item.name %>
                    </td>
                    <td>₹<%= c.item.price %>
                    </td>
                    <td>
                      <form action="/cart/update/<%= c.item._id %>" method="POST" class="quantity-form">
                        <input type="number" name="quantity" value="<%= c.quantity %>" min="1" class="quantity-input">
                        <button type="submit" class="btn btn-success">Update</button>
                      </form>
                    </td>
                    <td>₹<%= subtotal %>
                    </td>
                    <td>
                      <form action="/cart/delete/<%= c.item._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Remove</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
            </tbody>
          </table>

          <div class="total-section">
            <h4>Total: ₹<%= total %>
            </h4>
          </div>
        </div>
        <% } else { %>
          <div class="empty-cart">
            <p>Your cart is empty.</p>
          </div>
          <% } %>

            <% if (error && error.length> 0) { %>
              <div class="alert alert-danger">
                <%= error[0] %>
              </div>
              <% } %>

                <% if (success && success.length> 0) { %>
                  <div class="alert alert-success">
                    <%= success[0] %>
                  </div>
                  <% } %>
    </div>
</body>

</html>